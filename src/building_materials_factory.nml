produce (produce_building_materials_factory,
    [WDPR: LOAD_TEMP(1); STEL: LOAD_TEMP(1);],     // consume
    [BDMT: LOAD_TEMP(1) * 2; PASS: LOAD_TEMP(2);], // produce
    0                                              // don't run callback again
)

/* If we don't have enough stored, produce as much as we can anyway. */
switch (FEAT_INDUSTRIES, SELF, switch_produce_building_materials_factory_min, [
    STORE_TEMP(min(incoming_cargo_waiting("STEL"), incoming_cargo_waiting("WDPR")), 1), // Set the production amount to the smallest input stockpile
    STORE_TEMP((((LOAD_TEMP(1) / 4) * transported_last_month_pct("BDMT")) / 100), 2), // Set the passenger production level
    ]) {produce_building_materials_factory;}

/* Determine the production level and see if we have enough stored to meet it. */
switch (FEAT_INDUSTRIES, SELF, switch_produce_building_materials_factory_2, [
    STORE_TEMP(GetSecondaryProductionLevel(), 1), // Get production level
    STORE_TEMP((((LOAD_TEMP(1) / 4) * transported_last_month_pct("BDMT")) / 100), 2), // Set the passenger production level
    incoming_cargo_waiting("STEL") > LOAD_TEMP(1) && incoming_cargo_waiting("WDPR") > LOAD_TEMP(1), // Check if there's enough Steel and Lumber for this production level
    ]) {
        1: produce_building_materials_factory;
        switch_produce_building_materials_factory_min;
    }

/* If no cargo is waiting, bail out. */
switch (FEAT_INDUSTRIES, SELF, switch_produce_building_materials_factory, incoming_cargo_waiting("STEL") > 0 && incoming_cargo_waiting("WDPR") > 0)
    {
        1: switch_produce_building_materials_factory_2;
        produce_none;
    }

/* Location check */
switch (FEAT_INDUSTRIES, SELF, loc_check_building_materials_factory, IsCity() && IsNearTown() && CityHasNoSecondaryIndustries() && NoNearbyCompetitors(industry_building_materials_factory, 100)) {1: return CB_RESULT_LOCATION_ALLOW; return string(STR_LOC_ERROR_SECONDARY);}

