				spec_flags:				(param_primary_only == 1) ? bitmask(IND_FLAG_DO_NOT_FORCE_INSTANCE_AT_MAP_GENERATION) : 0;
				cargo_types:			[
					accept_cargo("WSTE", produce_cargo("RCYC",1), produce_cargo("PASS",0.25)),
				];
				name:					string(STR_NAME_RECYCLING_CENTER);
