switch (FEAT_INDUSTRIES, SELF, switch_industrial_district_2,
		(industry_distance(industry_oil_refinery, -1) < 15) ||
		(industry_distance(industry_paper_mill, -1) < 15) ||
		(industry_distance(industry_steel_mill, -1) < 15) ||
